<!--pages/look_zy/pgzy.wxml-->
<view class='page'>
 <form bindsubmit="formSubmit">
   <view class='box'>
       <view class='name' style='background-image:url("https://mrbannana.mynatapp.cc/image/icon/looks.png")'>作业名称:{{name}}</view>
       <view class='time' style='background-image:url("https://mrbannana.mynatapp.cc/image/icon/zy_time.png")'>提交时间:<text style='letter-spaceing:-2rpx;'>{{data.starttime}}</text></view>
       
       <scroll-view class='scroll' scroll-y="true">
            <view>
              <image bindtap='img' src="{{src}}" style='height:100%;width:100%' data-src='{{src}}'></image>
            </view>
       </scroll-view>
       <textarea name="content" placeholder='请在这里添加文字批改信息哦~' placeholder-class='pl'></textarea>
   </view>
   <button form-type='submit'>批改完成</button>
   </form>
</view>

