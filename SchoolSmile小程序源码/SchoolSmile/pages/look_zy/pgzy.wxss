.page{
  padding: 40rpx 30rpx;
}
.box{
  background-color: #fff;
  border: 1px solid gainsboro ;
  padding: 30rpx 25rpx;
  border-radius: 20rpx;
}
.name{
  width: 550rpx;
  overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
   
}
.box>view{
  font-size: 34rpx;
  padding-left: 50rpx;
  background-size: 40rpx 40rpx;
  background-repeat: no-repeat;
  background-position-y: 14rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.name{
  background-size:34rpx 34rpx !important;
  background-position-x:4rpx !important;

}
.time{
  font-weight: 400!important;
  margin-top: -20rpx;
  margin-bottom:20rpx;
}
.box>view:last-of-type{
  border-bottom: 1px solid #cccccc;
}

.scroll{
  height: 500rpx;
  border-radius: 15rpx;
  border: 1px solid #bfbfbf;
  overflow: hidden;
}
text{
 font-size:30rpx;
}
.scroll view{
 height: 800rpx;
 width: 100%;
 background-size: 100% 100%;
 overflow: hidden;
 padding-top: 0;
 }
 .pl{
   font-size: 25rpx;
 }
 textarea{
   font-size: 30rpx;
  margin-top: 15rpx;
  border-radius: 15rpx;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1px solid #bfbfbf;
  width: 100%;

}
button{
  margin-top: 15rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 15rpx;
  background-color: #5671f6;
  color:white;
}