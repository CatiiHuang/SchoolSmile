/* pages/login/login.wxss */
page{
  height: 100%;
  
  background-color: #fff !important;
 
}
navigator{
  color: 4e4e4e;
  margin-top:25rpx;
  font-size: 14px;
}
.bg{
  background-color: #cccccc !important;
}
.big-box{
  background-color:white;
  border-radius: 15rpx;
  padding-top: 100rpx;
  box-sizing: border-box;
}
.big-box image{
  width:190rpx;
  height: 190rpx;
  margin: 0 auto;
  display: block;

}
.mini-box{
  width: 650rpx;
  margin: 0 auto;
  box-sizing: border-box;
  padding-bottom: 180rpx;
}
input{
  font-size: 30rpx;
}
.mini-box .number-inp{
  margin-top: 130rpx;
  height: 70rpx;
  background-color: #ececec;
  background-image: url("data:image/png;base64,");
  background-repeat: no-repeat;
  background-position: 20px;
  background-size: 36rpx ;
  border: 1px solid whitesmoke;
  box-shadow: 0px 1px whitesmoke;
  border-radius: 15rpx;
  padding-left: 100rpx;
}
.mini-box .password-inp{
   background-color: #ececec;
  margin-top: 60rpx;
  height: 70rpx;
  background-image: url("data:image/png;base64,");
  background-repeat: no-repeat;
  background-position: 20px;
  background-size: 36rpx ;
  border: 1px solid whitesmoke;
  box-shadow: 0px 1px whitesmoke;
  border-radius: 15rpx;
  padding-left: 100rpx;
}
.mini-box form view{
  display: flex;
  margin:30rpx 0 50rpx 0;
  justify-content: space-between;
  color: #4e4e4e;
  font-size: 30rpx;
}
.mini-box form button{
  font-weight: bold;
  text-align: center;
  line-height: 70rpx;
  letter-spacing: 6rpx;
  border-radius: 17rpx;
  background-color:#5671f6; 
  color:white;
  font-size: 30rpx;

}
