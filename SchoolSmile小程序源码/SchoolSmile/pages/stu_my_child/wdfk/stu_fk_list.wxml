       <view class='name' style='background-image:url("https://mrbannana.mynatapp.cc/image/icon/looks.png")'>反馈课程:{{data.coursename}}</view>
       <view class='time' style='background-image:url("https://mrbannana.mynatapp.cc/image/icon/zy_time.png")'>反馈时间: <text>{{data.starttime}}</text> </view>
       
