           {{data.content}}
       </view>
       
       <text>下方为 <text style='color: #5671f6;'>{{name}}</text> 老师的回复信息哦</text>
       <view class='tea_box'>
       {{tea}}
       </view>
   </view>
   <button bindtap='back'>返 回</button>
</view>

